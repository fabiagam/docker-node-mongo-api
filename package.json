{
  "name": "docker-node-mongo-app",
  "version": "1.0.0",
  "description": "Dockerized Node REST API on MongoDB",
  "main": "server.js",
  "scripts": {
    "start": "nodemon --inspect  server.js",
    "migrate": "npx mongoose-cli db:migrate",
    "migrate:reset": "npx mongoose-cli db:migrate:undo:all && npm run migrate",
    "test": "mocha --exit"
  },
  "keywords": [
    "MongoDB",
    "NodeJS",
    "Task manager",
    "Docker"
  ],
  "author": "James Abiagam",
  "license": "ISC",
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "bcryptjs": "^2.4.3",
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.0",
    "chai": "^4.2.0",
    "compression": "^1.7.4",
    "connect-mongo": "^3.2.0",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "helmet": "^3.22.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "logger": "0.0.1",
    "mocha": "^8.1.3",
    "moment-timezone": "^0.5.35",
    "mongoose": "^5.9.9",
    "path": "^0.12.7",
    "sanitizer": "^0.1.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "verbose": true
  },
  "devDependencies": {
    "cross-env": "^7.0.2",
    "jest": "^25.4.0",
    "nodemon": "^2.0.3",
    "supertest": "^4.0.2"
  }
}
